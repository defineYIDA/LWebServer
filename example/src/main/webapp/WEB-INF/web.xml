<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.lws.lwebserver.example.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.lws.lwebserver.example.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.lws.lwebserver.example.web.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserEditServlet</servlet-name>
        <servlet-class>com.lws.lwebserver.example.web.servlet.UserEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DefaultServlet</servlet-name>
        <servlet-class>com.lws.lwebserver.core.servlet.impl.DefaultServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserEditServlet</servlet-name>
        <url-pattern>/user/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DefaultServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <!--Filter-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.lws.lwebserver.example.web.filter.LoginFilter</filter-class>
    </filter>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>com.lws.lwebserver.example.web.filter.LogFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/**</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/**</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.lws.lwebserver.example.web.listener.ServletContextAndSessionListener</listener-class>
        <listener-class>com.lws.lwebserver.example.web.listener.MyServletRequestListener</listener-class>
    </listener>
</web-app>
    